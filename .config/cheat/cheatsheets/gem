---
tags: [ packaging, ruby ]
---
# search
gem search <package>

# install
gem install <package>

# using a installed gem
# go to IRB and then:
require 'gem-name'
# you're ready to use the gem

# install a package in user space:
gem install --user-install <package>

# install specific version of a package:
gem install <package> -v <version>

# uninstall a package:
gem uninstall <package>

# upgrade a package:
gem update <package>

# remove old versions
gem cleanup <package>

# check which versions would be deleted
gem cleanup --dry-run

# show details of a package:
gem info <package>

# list local packages:
gem list --local

# list remote gems
gem list <search_term> --remote

# all versions
gem list <search_term> --remote --all

# show help on command:
gem help <command>

