# Order of last modification. Use -r to reverse the list
ls -t  

# Group files by extension.
ls -X

# Sort by file size.
ls -S

# List files recursively.
ls -R

# Naturally sort version numbers in filenames.
ls -v

# directories only:
ls -d */ <dir>

# directories only, include hidden:
ls -d .*/ */ <dir>
